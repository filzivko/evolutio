<% include ../partials/header %>

<% if ((article.created_at.getMonth()+1)<10){ var monthNum = "0"+ Number(article.created_at.getMonth()+1);}else{monthNum = article.created_at.getMonth()+1;} %>

<% if ((article.created_at.getDate())<10){ var dateNum = "0"+ Number(article.created_at.getDate());}else{dateNum = article.created_at.getDate();} %>

<div class="container">
    <div class="row">
        <h1 class="titleEdit">Edit an Article</h1>
        <div style="width:100%; margin: 25px auto;">
            <form action="/articles/<%= article._id %>?_method=PUT" method="POST">
                <div class="form-group">Title
                    <input class="form-control" type="text" name="article[title]" value="<%=article.title%>">
                </div>
                <div class="form-group">Image
                 <input class="form-control" type="text" name="article[image]" value="<%=article.image%>">                
                </div>
                <div class="form-group">Article Body
                 <div class="input-group articleBodyInput" type="text">
                    <textarea class="form-control" name="article[articleBody]" aria-label="With textarea"><%=article.articleBody%></textarea>
                </div>
                </div>
                <div class="form-group">Date
                 <input class="form-control" type="date" name="article[created_at]" value="<%=article.created_at.getFullYear() + "-" + monthNum + "-"+ dateNum%>">                
                </div>
                <div class="form-group">Keywords
                    <input class="form-control" type="text" name="article[key]" placeholder="keyword/tags" value="<%=article.key%>">           
                </div>
                <div class="form-group">
                <button class="btn btn-lg btn-default btn-primary btn-block">Submit!</button>                    
                </div>
            </form>   
            <a href="/">Go Back</a>
        </div>


    </div>
    
</div>

<% include ../partials/footer %>
